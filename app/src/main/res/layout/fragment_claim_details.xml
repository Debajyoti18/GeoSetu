<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="24dp" />

        <!-- Claim Details Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basic Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tvClaimId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Claim ID: C1001"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvApplicantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Applicant: John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvVillage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Village: Sample Village"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTribe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tribe: Sample Tribe"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvClaimType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Claim Type: IFR"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvLandArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Land Area: 2.5 acres"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Status: PENDING"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSubmissionDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submitted: 2024-01-15"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvReviewDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reviewed: 2024-01-20"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvReviewComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comments: All documents verified"
                    android:textSize="14sp"
                    android:textColor="@color/secondary_text"
                    android:visibility="gone" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- DSS Recommendations Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DSS Recommendations"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</ScrollView>